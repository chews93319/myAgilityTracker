<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_doglist"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".APIActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TitleApiActivity"
        android:text="Google+ Api Demo"
        android:textSize="45sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextPrimaryLight"
        android:layout_margin="5dp"
        android:padding="10sp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" (Demo of OAuth2 and GoogleAPIs)"
        android:textSize="10sp"
        android:padding="3sp"
        android:gravity="center_horizontal"
        />

    <View style="@style/Divider"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Posts"
        android:id="@+id/btngplus_getpost"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textAccessToken"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:padding="5sp"
        />



    <View style="@style/Divider"/>

</LinearLayout>